@model GroupCreateDto

@{
    ViewData["Title"] = "Create Group";
}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h2 class="card-title mb-0">Create Group</h2>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        <div class="form-group">
                            <label asp-for="No" class="control-label"></label>
                            <input asp-for="No" class="form-control" placeholder="Enter group number" />
                            <span asp-validation-for="No" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Limit" class="control-label"></label>
                            <input asp-for="Limit" class="form-control" placeholder="Enter group limit" />
                            <span asp-validation-for="Limit" class="text-danger"></span>
                        </div>
                        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                        <div class="form-group d-flex justify-content-end">
                            <button type="submit" class="btn btn-primary mr-2">Create</button>
                            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts {
    @{
        Html.Partial("_ValidationScriptsPartial");
    }
}